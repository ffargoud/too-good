<h1 style ="color:purple; margin-top: 20px; margin-bottom:20px;">My dashboard</h1>


    <% @restaurants.each do |restaurant| %>
      <div class="card-trip">
        <%=link_to restaurant_path(restaurant), class: "image-container" do %>
          <% if restaurant.photo.attached? %>
             <div class="image">
              <%= cl_image_tag restaurant.photo.key,height: 300, width: 400, crop: :fill, class: "img-rounded" %>
            </div>
          <% else %>
            <div class="image">
              <%= cl_image_tag "https://res.cloudinary.com/dnie1qfbq/image/upload/v1582631708/samples/food/pot-mussels.jpg", height: 300, width: 400, crop: :fill, class: "img-rounded" %>
            </div>
          <% end %>
        <% end %>
      </div>

           <div class="card-trip-infos">
            <h2 class="myrestaurant-name"><%= restaurant.name %></h2>
            <p>
              <% if policy(restaurant).edit? %>
               <h3 class="btn btn-default"><button id= "ModalUpdate" type="button" data-toggle="modal" data-target="#exampleModalCenter">Change restaurant details</button></p>
               <% end %>
            </p>
             <p>
              <% if policy(restaurant).destroy? %>
                <%= link_to restaurant_path(restaurant.id), method: :delete do %>
                  <h3 class="btn btn-default">Delete restaurant <%= restaurant.name %></h3>
                <% end %>
              <%end%>
            </p>
          </div>
        <%end%>


