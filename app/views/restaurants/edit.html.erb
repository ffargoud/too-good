<%= render 'shared/navbar', new_restaurant: @new_restaurant %>
  <div class="container">
    <%= simple_form_for(@restaurant) do |f| %>

        <%= f.input :photo, as: :file, :label=>"Restaurant picture:" %>
        <%= f.input :name, :label=>"Restaurant name:" %>
        <%= f.input :description, :label=>"Restaurant description:" %>
        <%= f.input :address, :label=>"Restaurant address:" %>
        <%= f.input :category, :label=>"Food category:" %>

        <%=f.submit "Edit my restaurant" %>
  <%end%>
  </div>


