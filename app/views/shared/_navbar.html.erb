<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "/restaurants", class: "navbar-brand" do %>
    <%= image_tag "https://static.thenounproject.com/png/1911779-200.png" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <!--   <div id="navbar-title">
    <h3 class="navbar-name">Zero Food Waste</h3>
  </div> -->

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <% if params.key?(:id) %>
          <li class="nav-item">
            <%= link_to "Home", "/#", class: "btn btn-flat" %>
          </li>
        <% end %>
        <li class="nav-item dropdown">
          <%= button_tag "Menu", class: "btn btn-flat", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div id="dropdown" class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <p class="dropdown-item" >
              <%= link_to 'Dashboard', dashboard_path, class: "dropdown-item" %>
            </p>
            <% if policy(Restaurant).create? %>
              <p class="dropdown-item" >
                <button type="button" data-toggle="modal" data-target="#exampleModalCenter">New restaurant</button>
              </p>
            <% end %>
            <p class="dropdown-item" >
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </p>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "btn btn-flat" %>
        </li>
        <li class="nav-item">
          <%= link_to "Sign up", new_user_registration_path, class: "btn btn-flat" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<%= render partial: 'restaurants/modal', new_restaurant: @new_restaurant %>
